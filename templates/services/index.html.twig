{% extends 'base.html.twig' %}

{% block title %}Nos Services{% endblock %}

{% block content %}
    <div class="container marketing">
        <div class="featurette-divider mt-5">
            {% for service in Services %}
                <div class="row featurette align-items-center">
                    <div class="col-md-5 text-center">
                        <img src="/uploads/images/Services/{{ service.Illustration }}" class="bd-placeholder-img bd-placeholder-img-lg featurette-image img-fluid mx-auto my-auto" width="500" height="500" preserveAspectRatio="xMidYMid slice" focusable="false">
                    </div>
                    <div class="col-md-7 my-auto text-center">
                        <h2 class=" mb-4">{{ service.Name }}</h2>
                        <p class="lead">{{ service.Description }}</p>
                    </div>
                </div>
                <hr class="featurette-divider">
            {% endfor %}
        </div>
    </div>
{% endblock %}


